            </dependency>
            <dependency>
                <groupId>com.zel</groupId>
                <artifactId>dbmanager</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.zel</groupId>
                <artifactId>zel-mq</artifactId>
