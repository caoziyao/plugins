    <!-- 依赖声明 -->
    <!-- 统一依赖构件版本， 本身不下载依赖 -->
    <dependencyManagement>
        <dependencies>
            <!--本项目模块的依赖 -->
            <dependency>
                <groupId>com.zel</groupId>
                <artifactId>common-utils</artifactId>
                <version>1.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>com.zel</groupId>
                <artifactId>pojo</artifactId>
